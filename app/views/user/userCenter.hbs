{{#section 'head'}}
	<link rel="stylesheet" href="/css/userCenter.css">
{{/section}}

{{#if user}}
    <header class="ui-header"></header>
    <div class="ui-container user-head ui-center">
        <div class="ui-avatar-xlg">
            <span style="background-image:url(http://placeholder.qiniudn.com/140x140)"></span>
        </div>
            <span class="user-name">{{user.name}}</span>
    </div>

    <div class="ui-container">
        <ul class="ui-list ui-list-text ui-list-link ui-border-tb">
            <li class="ui-border-t">
                <h4>my orders</h4>
            </li>
            <li class="ui-border-t">
                <h4 class="ui-nowrap">my address</h4>
            </li>
            <li class="ui-border-t">
                <h4>setting</h4>
            </li>
        </ul>
    </div>

    <div class="logout-con ui-container">
        <a href="/logout"><button class="ui-btn-danger ui-btn-lg">Logout</button></a>
    </div>

{{else}}
    <header class="ui-header"></header>
    <div class="ui-container user-head ui-center">
        <div class="ui-avatar-xlg">
            <span style="background-image:url(http://placeholder.qiniudn.com/140x140)"></span>
        </div>
            <span class="user-name">Guest</span>
    </div>

